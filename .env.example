# StayNest Environment Variables

# ==============================================================================
# NEXT.JS CONFIGURATION
# ==============================================================================

# Application Environment (development, staging, production)
NODE_ENV=development

# Next.js build ID (auto-generated, but can be customized)
# NEXT_BUILD_ID=

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================

# Application Base URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Site Name and Metadata
NEXT_PUBLIC_SITE_NAME=StayNest
NEXT_PUBLIC_SITE_DESCRIPTION=Find Your Perfect Stay - Modern Hotel Booking Platform

# ==============================================================================
# API CONFIGURATIONS (For Future Integration)
# ==============================================================================

# Mock Data Mode (set to 'false' when integrating real APIs)
NEXT_PUBLIC_USE_MOCK_DATA=true

# Hotel Booking API (e.g., Booking.com, Expedia, custom backend)
# API_BASE_URL=https://api.example.com
# API_KEY=your_api_key_here
# API_SECRET=your_api_secret_here

# Google Maps API (for location services)
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Geolocation API
# NEXT_PUBLIC_GEOLOCATION_API_KEY=your_geolocation_api_key

# ==============================================================================
# PAYMENT INTEGRATION (For Future Implementation)
# ==============================================================================

# Stripe
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# PayPal
# NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id
# PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# ==============================================================================
# EMAIL SERVICES (For Booking Confirmations)
# ==============================================================================

# SendGrid
# SENDGRID_API_KEY=SG.your_sendgrid_api_key
# SENDGRID_FROM_EMAIL=noreply@staynest.com

# Mailgun
# MAILGUN_API_KEY=your_mailgun_api_key
# MAILGUN_DOMAIN=mg.staynest.com

# ==============================================================================
# DATABASE (For Future Backend Integration)
# ==============================================================================

# MongoDB
# MONGODB_URI=mongodb://localhost:27017/staynest
# MONGODB_DB=staynest

# PostgreSQL
# DATABASE_URL=postgresql://username:password@localhost:5432/staynest

# ==============================================================================
# AUTHENTICATION (For User Management)
# ==============================================================================

# NextAuth.js
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your_nextauth_secret_here

# OAuth Providers
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret
# FACEBOOK_CLIENT_ID=your_facebook_client_id
# FACEBOOK_CLIENT_SECRET=your_facebook_client_secret

# ==============================================================================
# CLOUD STORAGE (For Image Upload)
# ==============================================================================

# AWS S3
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=staynest-images

# Cloudinary
# NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# ==============================================================================
# ANALYTICS AND MONITORING
# ==============================================================================

# Google Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry (Error Monitoring)
# NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn
# SENTRY_ORG=your_sentry_org
# SENTRY_PROJECT=staynest

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================

# Enable/Disable Features
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_FAVORITES=true
NEXT_PUBLIC_ENABLE_BOOKING=true
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_FILTERS=true

# ==============================================================================
# DEVELOPMENT SETTINGS
# ==============================================================================

# Debug Mode
NEXT_PUBLIC_DEBUG_MODE=false

# Show API Response Times
NEXT_PUBLIC_SHOW_API_TIMING=false

# Enable Detailed Logging
ENABLE_LOGGING=true
LOG_LEVEL=info
